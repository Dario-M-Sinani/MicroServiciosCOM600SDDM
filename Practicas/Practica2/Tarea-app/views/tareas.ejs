<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Gestor de Tareas</title>
    <style> /* Estilos básicos para que se vea ordenado */
        body { font-family: sans-serif; margin: 2em; }
        form { margin-bottom: 2em; padding: 1em; border: 1px solid #ccc; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 0.5em; border: 1px solid #ddd; text-align: left; }
        .delete-form { display: inline; }
    </style>
</head>
<body>
    <h1>Gestor de Tareas</h1>

    <h2>Añadir Nueva Tarea</h2>
    <form action="/tareas" method="POST">
        <input type="text" name="titulo" placeholder="Título" required>
        <input type="text" name="descripcion" placeholder="Descripción">
        <select name="estado">
            <option value="pendiente">Pendiente</option>
            <option value="en progreso">En Progreso</option>
            <option value="completado">Completado</option>
        </select>
        <button type="submit">Añadir Tarea</button>
    </form>

    <h2>Lista de Tareas</h2>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% tareas.forEach(tarea => { %>
                <tr>
                    <td><%= tarea.titulo %></td>
                    <td><%= tarea.descripcion %></td>
                    <td><%= tarea.estado %></td>
                    <td>
                        <form class="delete-form" action="/tareas/delete/<%= tarea._id %>" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>